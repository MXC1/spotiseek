SLSKD_USERNAME=<YOUR_SOULSEEK_USERNAME>
SLSKD_PASSWORD=<YOUR_SOULSEEK_PASSWORD>
TOKEN=<A_RANDOM_API_KEY>
SPOTIFY_CLIENT_ID=<YOUR_SPOTIFY_CLIENT_ID>
SPOTIFY_CLIENT_SECRET=<YOUR_SPOTIFY_CLIENT_SECRET>
APP_ENV=prod
HOST_BASE_PATH=<PATH_TO_THIS_DIRECTORY>

# Task Scheduler Intervals (in minutes)
# Each task runs on its own schedule. Set to 0 to disable a task.
TASK_SCRAPE_PLAYLISTS_INTERVAL=1440       # Scrape Spotify playlists (default: once per day)
TASK_INITIATE_SEARCHES_INTERVAL=60        # Initiate Soulseek searches (default: every hour)
TASK_POLL_SEARCH_RESULTS_INTERVAL=15      # Poll for search results (default: every 15 minutes)
TASK_SYNC_DOWNLOAD_STATUS_INTERVAL=5      # Sync download status from slskd (default: every 5 minutes)
TASK_MARK_QUALITY_UPGRADES_INTERVAL=1440  # Check for quality upgrades (default: once per day)
TASK_PROCESS_UPGRADES_INTERVAL=60         # Process upgrade queue (default: every hour)
TASK_EXPORT_LIBRARY_INTERVAL=1440         # Export iTunes library (default: once per day)